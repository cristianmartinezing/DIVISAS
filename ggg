SELECT C.RA_CAMPAIGN_ID AS campaña,
  C.RA_CMPGN_NAME       AS nombre_campaña,
  D.RA_CMPGN_WAVE_ID    AS Actividad,
  D.RA_WAVE_NAME        AS nombre_actividad,
  D.START_DATE fecha_inicio_Act,
  D.END_DATE fecha_fin_act,
  D.ROW_ADDED_OPRID    AS USUARIO_CREACION,
  D.ROW_LASTMANT_OPRID AS USUARIO_ACTUALIZACION
FROM PS_RA_CMPGN_WAVE D,
  PS_RA_CAMPAIGN C
WHERE D.BUSINESS_UNIT   = C.BUSINESS_UNIT
AND D.RA_CAMPAIGN_ID    =C.RA_CAMPAIGN_ID
AND D.RA_CMPGN_STATUS_CD='EXEC';
